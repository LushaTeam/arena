<h2>
  Queues

  <div class="pull-right">
    <button class="btn btn-danger js-pause-queues">
      Pause All
    </button>
    <button class="btn btn-primary js-resume-queues">
      Resume All
    </button>
  </div>
</h2>
<h3>Overview</h3>

<div class="no-padding">
  <table id="queueList" class="table">
    <thead>
      <th>Host</th>
      <th>Name</th>
      <th>Active ({{ this.active }})</th>
      <th>Waiting ({{ this.waiting }})</th>
      <th>Completed - Last Hour ({{ this.completedLastHourCount }})</th>
      <th>Completed - Last 24 Hours ({{ this.completedLastDayCount }})</th>
      <th>Failed - Last Hour ({{ this.failedLastHourCount }})</th>
      <th>Failed - Last 24 Hours ({{ this.failedLastDayCount }})</th>
    </thead>
    <tbody>
      {{#each queues}}
        <tr>
          <td>{{ this.hostId }}</td>
          <td><a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.name }}</a></td>
          <td>{{ this.activeCount }}</td>
          <td>{{ this.waitingCount }}</td>
          <td>{{ this.completedLastHourCount }}</td>
          <td>{{ this.completedLastDayCount }}</td>
          <td>{{ this.failedLastHourCount }}</td>
          <td>{{ this.failedLastDayCount }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}

{{#contentFor 'script'}}
  new Tablesort(document.getElementById('queueList'));
{{/contentFor}}
